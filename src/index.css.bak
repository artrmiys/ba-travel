:root{
  --bg0:#0b0812;
  --bg1:#22103a;
  --bg2:#130a22;
  --ink: rgba(255,255,255,.92);
  --muted: rgba(255,255,255,.70);
  --line: rgba(255,255,255,.14);
  --card: rgba(255,255,255,.06);
  --card2: rgba(0,0,0,.22);
  --accent: #ffb07a;
}

*{ box-sizing:border-box; }
html, body{ height:100%; }
body{
  margin:0;
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Noto Sans", "Helvetica Neue", sans-serif;
  color: var(--ink);
  background: var(--bg0);
  overflow-x:hidden;
}
body::before{
  content:"";
  position:fixed;
  inset:0;
  z-index:-1;
  background:
    radial-gradient(1100px 720px at 10% 10%, rgba(201,179,255,.28), transparent 60%),
    radial-gradient(900px 650px at 85% 18%, rgba(255,184,107,.20), transparent 62%),
    radial-gradient(900px 650px at 50% 110%, rgba(255,120,190,.16), transparent 62%),
    linear-gradient(180deg, #22103a 0%, #130a22 55%, #0b0812 100%);
}

#root{ min-height:100%; }

.app{
  min-height:100vh;
  display:grid;
  grid-template-columns: 310px 1fr;
}

.side{
  border-right: 1px solid var(--line);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  background: rgba(0,0,0,.18);
  padding: 18px 14px;
}

.sideTop{
  cursor:pointer;
  padding: 14px 12px;
  border-radius: 18px;
  border: 1px solid var(--line);
  background: rgba(0,0,0,.22);
  margin-bottom: 14px;
}
.sideLogo{ font-weight: 900; font-size: 22px; letter-spacing: .2px; }
.sideSub{ opacity:.7; margin-top: -2px; }

.sideScroll{
  overflow:auto;
  max-height: calc(100vh - 120px);
  padding-right: 6px;
}

.sideGroup{ margin: 14px 6px; }
.sideGroupTitle{ font-weight: 900; opacity:.9; margin-bottom: 8px; }
.sideList{ display:flex; flex-direction:column; gap:8px; }

.sideItem{
  display:flex; align-items:center; gap:10px;
  border-radius: 14px;
  border: 1px solid var(--line);
  background: rgba(0,0,0,.18);
  padding: 10px 10px;
  color: var(--ink);
  cursor: pointer;
}
.sideItem.soon{ opacity: .55; cursor: default; }
.sideItem.active{ border-color: rgba(255,255,255,.32); background: rgba(255,255,255,.08); }
.miniDot{ width:8px; height:8px; border-radius:999px; background: rgba(255,255,255,.35); }
.sideItem.open .miniDot{ background: var(--accent); }
.sideName{ flex:1; text-align:left; font-weight: 700; }
.sideTag{ font-size: 11px; letter-spacing:.8px; opacity:.8; }

.main{
  padding: 24px 26px 40px;
}

.wrap{ max-width: 1100px; }

.hero{
  display:grid;
  grid-template-columns: 1.05fr .95fr;
  gap: 18px;
  align-items: center;
  padding: 20px 0 10px;
}

.heroMini{
  padding: 18px 0 8px;
}

.kicker{
  font-size: 12px;
  letter-spacing: 2px;
  opacity:.72;
  margin-bottom: 10px;
}

.h1{
  font-size: 76px;
  line-height: .92;
  margin: 0 0 12px;
  font-weight: 900;
}
.h2{
  font-size: 56px;
  line-height: .98;
  margin: 0 0 10px;
  font-weight: 900;
}

.lead{
  max-width: 620px;
  font-size: 15px;
  line-height: 1.6;
  opacity:.78;
}

.globeFrame{
  height: 360px;
  border-radius: 26px;
  border: 1px solid var(--line);
  background: rgba(0,0,0,.18);
  overflow:hidden;
}

.grid{
  display:grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14px;
  margin-top: 16px;
}

.card{
  border-radius: 22px;
  border: 1px solid var(--line);
  background: rgba(0,0,0,.18);
  overflow:hidden;
}
.cardHead{
  padding: 14px 14px 10px;
  border-bottom: 1px solid rgba(255,255,255,.10);
}
.cardTitle{ font-weight: 900; }
.cardBody{ padding: 12px 12px 14px; display:flex; flex-direction:column; gap:8px; }

.rowBtn{
  display:flex; align-items:center; gap:10px;
  border-radius: 14px;
  border: 1px solid rgba(255,255,255,.12);
  background: rgba(0,0,0,.16);
  padding: 10px 10px;
  color: var(--ink);
  cursor: pointer;
}
.rowBtn.soon{ opacity:.55; cursor:default; }
.dot{ width:8px; height:8px; border-radius:999px; background: rgba(255,255,255,.35); }
.rowBtn.open .dot{ background: var(--accent); }
.rowName{ flex:1; text-align:left; font-weight: 750; }
.rowTag{ font-size: 11px; letter-spacing:.8px; opacity:.8; }

.panel{
  border-radius: 22px;
  border: 1px solid var(--line);
  background: rgba(0,0,0,.18);
  overflow:hidden;
}
.panelHead{
  display:flex; align-items:flex-end; justify-content:space-between;
  gap: 14px;
  padding: 14px 14px 12px;
  border-bottom: 1px solid rgba(255,255,255,.10);
}
.panelTitle{ font-weight: 900; }
.panelSub{ opacity:.7; font-size: 12px; margin-top: 2px; }

.selectWrap{
  display:flex; align-items:center; gap:10px;
  font-size: 12px;
  opacity:.9;
}
.selectWrap select{
  height: 34px;
  padding: 0 10px;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255,.18);
  background: rgba(0,0,0,.22);
  color: var(--ink);
  outline: none;
}

.mapBox{
  height: 420px;
}
.leafletRoot{
  height: 100%;
  width: 100%;
  border-radius: 0;
}


/* === BA UI PATCH v1 === */

/* layout */
.wrap {
  max-width: 1200px;
}

/* city header */
.cityHeader {
  padding: 18px 0 10px;
}
.cityH1 {
  margin: 0;
  font-size: 56px;
  line-height: 1.02;
  letter-spacing: -0.02em;
}
.citySub {
  margin-top: 10px;
  opacity: 0.75;
}

/* cards */
.card {
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(255,255,255,0.10);
  border-radius: 16px;
  overflow: hidden;
}
.cardHeader {
  padding: 14px 16px;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 12px;
  border-bottom: 1px solid rgba(255,255,255,0.08);
}
.cardTitle {
  font-weight: 700;
  font-size: 14px;
  letter-spacing: 0.02em;
}
.cardSub {
  font-size: 12px;
  opacity: 0.75;
}

/* map */
.sectionHeader {
  padding: 14px 16px 0;
}
.sectionTitle {
  margin: 0;
  font-size: 18px;
  font-weight: 700;
}
.sectionSub {
  margin: 6px 0 12px;
  opacity: 0.75;
  font-size: 13px;
}
.filters {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 10px;
}
.select {
  background: rgba(0,0,0,0.25);
  color: #fff;
  border: 1px solid rgba(255,255,255,0.18);
  border-radius: 10px;
  padding: 6px 10px;
}
.leafletRoot {
  height: 440px;
  border-radius: 14px;
  overflow: hidden;
}
.leafletRoot .leaflet-container {
  height: 100%;
  width: 100%;
}

/* globe */
.globeWrap {
  height: 560px; /* bigger globe */
  width: 100%;
  border-radius: 14px;
  overflow: hidden;
  background: rgba(0,0,0,0.25);
}
.globeWrap canvas {
  width: 100% !important;
  height: 100% !important;
  display: block;
}

/* itinerary blocks */
.block {
  margin-top: 18px;
}
.blockHead {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 12px;
  margin: 18px 0 10px;
}
.h2 {
  margin: 0;
  font-size: 44px;
  line-height: 1.02;
  letter-spacing: -0.02em;
}

.itGrid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}
@media (max-width: 920px) {
  .itGrid {
    grid-template-columns: 1fr;
  }
}

.itDay {
  padding: 12px 14px;
}
.itTop {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 12px;
}
.itLabel {
  font-size: 12px;
  opacity: 0.75;
}
.itTitle {
  font-size: 14px;
  font-weight: 700;
}
.itList {
  margin: 10px 0 0;
  padding-left: 16px;
}
.itLink {
  color: #9ed4ff;
  text-decoration: none;
}
.itLink:hover {
  text-decoration: underline;
}


